		<springdoc-openapi-starter-webmvc-ui.version>2.8.8</springdoc-openapi-starter-webmvc-ui.version>
		<maven-surefire-plugin.version>3.1.2</maven-surefire-plugin.version>
		<caffeine.version>3.2.0</caffeine.version>
